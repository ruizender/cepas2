<p id="notice"><%= notice %></p>

<h1>Oenologists</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Nationality</th>
      <th>Editor</th>
      <th>Writer</th>
      <th>Reviewer</th>
      <th>Magazine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oenologists.each do |oenologist| %>
      <tr>
        <td><%= oenologist.name %></td>
        <td><%= oenologist.age %></td>
        <td><%= oenologist.nationality %></td>
        <td><%= oenologist.editor %></td>
        <td><%= oenologist.writer %></td>
        <td><%= oenologist.reviewer %></td>
        <td><%= oenologist.magazines.map(&:name).join(', ') %></td>       
        <td><%= link_to 'Show', oenologist %></td>
        <td><%= link_to 'Edit', edit_oenologist_path(oenologist) %></td>
        <td><%= link_to 'Destroy', oenologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Oenologist', new_oenologist_path, class:'btn btn-dark mx-2 text-light'%>
<%= link_to 'New Magazine', new_magazine_path, class:'btn btn-dark mx-2 text-light'%>
