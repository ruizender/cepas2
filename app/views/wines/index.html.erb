<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name%></td>
        <td><%=wine.strain_and_percent%></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
  <div>
  <%= link_to 'New Wine', new_wine_path %>
  </div>
  <div>
  <%= link_to 'New Strain', new_strain_path %>
  </div>
<% end %>
