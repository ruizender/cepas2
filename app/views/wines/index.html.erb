<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Strain</th>
        <th>Score</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @wines.each do |wine| %>
        <tr>
          <td><%= wine.name%></td>
          <td><%=wine.strain_and_percent%></td>
          <td><%=wine.score%></td>        
          <td><%= link_to 'Show', wine %></td>
          <% if current_user.admin?  %>
          <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
          <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end  %>
        </tr>
      <% end %>

    </tbody>
  </table>
  <br>
    <div>
    <% if current_user.admin?  %>
      <%= link_to 'New Wine', new_wine_path, class:'btn btn-dark text-primary' %>
      <%= link_to 'New Strain', new_strain_path, class:'btn btn-dark text-primary' %>
      <% end  %>
    </div>

